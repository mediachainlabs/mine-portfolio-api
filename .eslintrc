{
   "parser": "babel-eslint",
    "rules": {
        "indent": [
            2,
            2
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "comma-dangle": [
          0
        ],
        "no-console": [
          0
        ],
        "max-len": [
            1,
            100,
            4,
            {"ignoreComments": true, "ignoreUrls": true }
        ]
    },
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "globals": {
      "assert": false,
      "expect": false,
      "Assertion": false,
      "AssertionError": false
    },
    "extends": "eslint:recommended",
    "ecmaFeatures": {
        "modules": true,
        "experimentalObjectRestSpread": true
    }
}
